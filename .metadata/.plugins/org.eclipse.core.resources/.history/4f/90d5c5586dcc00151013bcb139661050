import scala.io._
import java.io._
import java.nio._
import scala.util.matching.Regex

object tst {
  def main(args: Array[String]): Unit = {
    //variables
      var custom = args(1)
      var user = args(2)
      val version = 0
      var dbname = if(args(1).replace(".", "").replace("-", "") =="") args(0).replace(".", "").replace("-", "") else args(1).replace(".", "").replace("-", "")
      println(dbname)
      val sourceFile = "C:\\Users\\"+user+"\\dev\\qdw-deployment\\Build\\LocalSettings.rb"
      if(dbname.toLowerCase == "master"){val version = getVersionCheck(sourceFile)}
      
      
  }
  
  def getVersionCheck(file:String):Int={
    var myVersion = Array[String]()
    for (line <- Source.fromFile(file).getLines()){
      if (line.contains("#master_version:")){
        myVersion = line.split(":")
      }
    }
    
    if(myVersion.nonEmpty){
      return myVersion(1).toInt
    }
    return 0
  }
  
} 